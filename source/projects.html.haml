%section#works.works
  .container
    .section-heading
      %h1.title.wow.fadeInDown{"data-wow-delay" => ".3s"} Latest Works
      %p.wow.fadeInDown{"data-wow-delay" => ".5s"}
        Aliquam lobortis. Maecenas vestibulum mollis diam. Pellentesque auctor neque nec urna. Nulla sit amet est. Aenean posuere
        %br/
        tortor sed cursus feugiat, nunc augue blandit nunc, eu sollicitudin urna dolor sagittis lacus.
    .row
      - n = 1
      - data.projects.each do |project|
        .col-sm-4.col-xs-12
          %figure.wow.fadeInLeft.animated.portfolio-item{"data-wow-delay" => "0ms", "data-wow-duration" => "500ms"}
            .img-wrapper
              %img.img-responsive{:alt => "this is a title", :src => "images/proj" + n.to_s + ".jpg"}/
              .overlay
                .buttons
                  %a.fancybox{:href => "images/proj" + n.to_s + ".jpg", :rel => "gallery"} Show
                  %a{:href => project[:url], :target => "_blank"} Github
            %figcaption
              %h4= project[:name]
              %p= project[:description]
              - n = n + 1
